@model Department
@{
    ViewData["TitlePhrase"]=@Model.Name;
}
<h1 style="color: red;">Are you sure to remove following data !!! <a class="btn btn-outline-primary" href="/department/index" role="button">Go Back</a></h1>
 
<ul class="list-group">
<li class="list-group-item">First Name: @Model.Name</li>
<li class="list-group-item">Last Name: @Model.Code</li>
<li class="list-group-item">Address: @Model.Description</li>
<li class="list-group-item">Gender: @Model.StartDate</li>
 
</ul>
<form asp-controller="Department" asp-action="Delete" method="POST">
 <input type="hidden" asp-for="Id"/>
  <button class="btn btn-danger">Delete Anyway</button>  
</form>